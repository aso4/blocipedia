<h1>Add a Collaborator To Your Private Wiki</h1>
<div class="col-md-8">
	<table class="table">
		<thead>
			<tr>
				<th>Email</th>
				<th>Add Collaborator</th>
				<th>Delete Collaborator</th>
			</tr>
		</thead>
		<tbody>
			<div class="field">
			<% @user.each do |user| %>

			    <div class="form-group">
			    	<tr>

			    		<td><%= user.email %></td>
			    		<td><%= button_to "Add Collaborator", wiki_collaborators_path(@wiki.id), params: { user_id: user.id } %></td>
			    		<td><%= button_to "Delete Collaborator", wiki_collaborator_path(@wiki.id, user.id), method: :delete, params: { user_id: user.id, wiki_id: @wiki.id } %></td>
			    	</tr>
			    </div>
			</div>
			<% end %>
		</tbody>
	</table>
</div>
